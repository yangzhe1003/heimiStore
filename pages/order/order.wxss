/* pages/order/order.wxss */
.cart-icon{
  width: 100%;
}

.outer{
  width: 100%;
  height: 200rpx;
  margin-top: 200rpx;
}

.outer image{
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}

.cart-text{
  text-align: center;
  margin-top: 50rpx;
}

.cart-button{
  display: block;
  width: 60%;
  margin: 0 auto;
  margin-top: 50rpx;
  background-color: #FF6801;
  color: #fff;
}

.item-list{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
}

.index{
  width: 50rpx;
  text-align: center;
  line-height: 200rpx;
}

.cart_container {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}

.item-select {
  position: relative;
  top: 20rpx;
  left: 10rpx;
  margin-right: 20rpx;
}

.column {
  display: flex;
  flex-direction: column;
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.row view{
  width: 100%;
  height: 100%;
}

.price{
  color: #FF6801;
}

.time{
  color: #ccc;
}

.status{
  width: 50%;
  height: 100%;
  margin: 0 auto;
  text-align: center;
  margin-left: 50rpx;
  margin-top: 50rpx;
}