/* pages/detail/detail.wxss */
.container{
  width: 100%;
}
.banner{
  width: 100%;
  height: 850rpx;
}

.banner swiper{
  width: 100%;
  height: 800rpx;
  position: relative;
}
.banner image{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.title{
  width: 100%;
  height: 230rpx;
}

.title-text{
  padding: 0 35rpx;
  font-size: 37.5rpx;
}

.title-detail{
  font-size: 25rpx;
  color: rgba(0, 0, 0, .54);
  padding: 0 35rpx;
}

.title-price{
  font-size: 50rpx;
  color: #ff6700;
  padding: 0 30rpx;
}

.model{
  width: 100%;
  height: 100rpx;
  background-color: #ccc;
  padding-top: 10rpx;
}

.model-content{
  /* width: 100%; */
  height: 100%;
  padding: 30rpx;
  background-color: #fff; 
  line-height: 100%;
}

.model-content text:first-child{
  font-size: 25rpx;
  color: rgba(0,0,0,.54);
}

.model-content text:last-child{
  font-size: 25rpx;
  margin-left: 20rpx;
}

.detail{
  width: 100%;
  background-color: #ccc;
  padding-top: 10rpx;
}

.detail image{
  width: 100%;
  display: block;
}

.detail-title{
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  line-height: 80rpx;
  font-size: 27rpx;
  color: #ff6700;
  text-align: center;
}

.bottom{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}

.bottom-left,.bottom-mid{
  width: 20%;
  height: 100%;
  float: left;
  text-align: center;
  border-right: 1rpx solid rgba(0, 0, 0, .03);
}
.bottom-left image,.bottom-mid image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 6rpx;
}
.bottom-left text,.bottom-mid text{
  display: block;
  width: 100%;
  height: 30rpx;
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
  color: rgba(0, 0, 0, .54)
}
.bottom-right{
  width: 59%;
  height: 100%;
  background-color: #E8502A;
  float: right;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}